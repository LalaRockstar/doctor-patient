        h2 Pescription
        span(onClick="document.getElementById('modal-pescribe').style.display='none'").las.la-times#btn--close 
    .pescribe-wrapper
        .pescribe-header
            .header-logo
                img(src="/img/logo-doctor.svg", alt="")
            .header-details
                h2 Dr. Ratneswar
                span Chamber 
                span Address: XXX,XXXX,XXX 
                span Number: XXXXXXX90
        .pescribe-section 
            .pescribe-sidebar 
                .pescribe-description
                    h2 Symtoms 
                    input(type="text").description
                .pescribe-description 
                    h2 Tests
                    input(type="text").description
                .pescribe-description
                    h2 Advice 
                    input(type="text").description
            .pescribe-main
                span 
